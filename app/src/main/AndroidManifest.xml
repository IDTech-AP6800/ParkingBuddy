<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParkingBuddy"
        tools:targetApi="31">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ParkingInfoActivity"
            android:exported="true"/>
        <activity
            android:name=".activities.PaymentOptionsActivity"
            android:exported="true"/>
        <activity
            android:name=".activities.InsertCardActivity"
            android:exported="true"/>
        <activity
            android:name=".activities.ProcessingActivity"
            android:exported="true"/>
        <activity android:name=".activities.SwipeCardActivity"
            android:exported="true"/>
        <activity android:name=".activities.PaymentFailedActivity"
            android:exported="true"/>
        <activity android:name=".activities.PaymentSuccessActivity"
            android:exported="true"/>

    </application>

</manifest>